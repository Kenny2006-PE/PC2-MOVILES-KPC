<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado del botón cuando está presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF9800" /> <!-- Color de fondo cuando está presionado -->
            <corners android:radius="12dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Estado del botón cuando está habilitado -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" /> <!-- Color de fondo cuando está habilitado -->
            <corners android:radius="12dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Estado del botón cuando está deshabilitado -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#9E9E9E" /> <!-- Color de fondo cuando está deshabilitado -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
